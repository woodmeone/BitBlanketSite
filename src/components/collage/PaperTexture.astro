---
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['paper-texture', className]}>
  <slot />
</div>

<style>
  .paper-texture {
    position: relative;
  }
  
  .paper-texture::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--paper-texture);
    background-repeat: repeat;
    opacity: 0.05;
    pointer-events: none;
    z-index: 1;
  }
</style>
