---
import AdminLayout from '../../../layouts/AdminLayout.astro';

const title = '粉丝互动 - 比特毯子';
---

<AdminLayout title={title} activeTab="interactions">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">粉丝互动</h1>
  </div>

  <div class="space-y-4" id="suggestionsList">
    <div class="text-center text-gray-500 dark:text-gray-400">加载中...</div>
  </div>

  <div id="replyModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-[500px] shadow-lg rounded-md bg-white dark:bg-gray-800">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white">回复粉丝</h3>
        <button id="closeReplyModal" class="text-gray-400 hover:text-gray-600">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <div class="mb-4 p-3 bg-gray-50 dark:bg-gray-700 rounded">
        <p class="text-sm text-gray-600 dark:text-gray-400">粉丝建议：</p>
        <p id="replySuggestionContent" class="mt-1 text-gray-900 dark:text-white"></p>
      </div>
      
      <form id="replyForm">
        <input type="hidden" id="replySuggestionId" />
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">回复内容</label>
          <textarea id="replyContent" rows="4" required
            class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm border p-2"
            placeholder="输入回复内容..."></textarea>
        </div>

        <div class="flex justify-end space-x-3">
          <button type="button" id="cancelReplyBtn" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
            取消
          </button>
          <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
            发送回复
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script>
  const token = localStorage.getItem('auth_token');
  
  if (!token) {
    window.location.href = '/admin/login';
  }

  const replyModal = document.getElementById('replyModal')!;
  const replyForm = document.getElementById('replyForm') as HTMLFormElement;
  let suggestions: any[] = [];

  async function loadSuggestions() {
    try {
      const response = await fetch('/api/suggestions', {
        headers: { 'Authorization': `Bearer ${token}` }
      });
      const data = await response.json();
      
      if (data.success && data.suggestions) {
        suggestions = data.suggestions;
        renderSuggestions();
      }
    } catch (error) {
      console.error('加载失败:', error);
    }
  }

  function renderSuggestions() {
    const container = document.getElementById('suggestionsList')!;
    
    if (suggestions.length === 0) {
      container.innerHTML = '<div class="text-center text-gray-500 dark:text-gray-400">暂无粉丝互动内容</div>';
      return;
    }

    const statusColors: Record<string, string> = {
      pending: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-800 dark:text-yellow-100',
      approved: 'bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100',
      in_progress: 'bg-blue-100 text-blue-800 dark:bg-blue-800 dark:text-blue-100',
      completed: 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300',
      rejected: 'bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100'
    };

    const statusText: Record<string, string> = {
      pending: '待处理',
      approved: '已采纳',
      in_progress: '进行中',
      completed: '已完成',
      rejected: '已忽略'
    };

    const typeText: Record<string, string> = {
      topic: '选题建议',
      article: '文章建议',
      project: '项目建议',
      other: '其他'
    };

    container.innerHTML = suggestions.map((item: any) => `
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-5">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <div class="flex items-center space-x-3 mb-2">
              <span class="px-2 py-1 text-xs rounded bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">
                ${typeText[item.type] || item.type}
              </span>
              <span class="px-2 py-1 text-xs rounded-full ${statusColors[item.status]}">
                ${statusText[item.status] || item.status}
              </span>
              <span class="text-xs text-gray-500 dark:text-gray-400">
                ${item.nickname || '匿名'}
              </span>
              <span class="text-xs text-gray-400 dark:text-gray-500">
                ${new Date(item.created_at).toLocaleDateString('zh-CN')}
              </span>
            </div>
            <p class="text-gray-900 dark:text-white">${item.content}</p>
            ${item.reply ? `
              <div class="mt-3 p-3 bg-indigo-50 dark:bg-indigo-900/30 rounded border-l-4 border-indigo-500">
                <p class="text-xs text-indigo-600 dark:text-indigo-400 mb-1">管理员回复：</p>
                <p class="text-sm text-gray-700 dark:text-gray-300">${item.reply}</p>
              </div>
            ` : ''}
            <div class="flex items-center mt-3 text-sm text-gray-500 dark:text-gray-400">
              <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              ${item.votes || 0} 票
            </div>
          </div>
          <div class="flex flex-col space-y-2 ml-4">
            ${item.status === 'pending' ? `
              <button onclick="adoptSuggestion(${item.id})" class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded text-green-700 bg-green-100 hover:bg-green-200 dark:text-green-200 dark:bg-green-800 dark:hover:bg-green-700">
                <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                采纳
              </button>
              <button onclick="ignoreSuggestion(${item.id})" class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 dark:text-red-200 dark:bg-red-800 dark:hover:bg-red-700">
                <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                忽略
              </button>
            ` : ''}
            <button onclick="openReplyModal(${item.id})" class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 dark:text-indigo-200 dark:bg-indigo-800 dark:hover:bg-indigo-700">
              <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
              </svg>
              ${item.reply ? '修改回复' : '回复'}
            </button>
          </div>
        </div>
      </div>
    `).join('');
  }

  async function adoptSuggestion(id: number) {
    if (!confirm('确定要采纳这条建议吗？采纳后将自动创建待办事项。')) return;

    try {
      const suggestion = suggestions.find(s => s.id === id);
      if (!suggestion) return;

      const todoResponse = await fetch('/api/todos', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          title: suggestion.content.substring(0, 50),
          description: `来自粉丝建议：${suggestion.content}`,
          status: 'pending'
        })
      });

      const todoResult = await todoResponse.json();

      if (todoResult.success) {
        const response = await fetch('/api/suggestions', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ id, status: 'approved' })
        });
        
        const result = await response.json();
        
        if (result.success) {
          loadSuggestions();
        } else {
          alert(result.error || '操作失败');
        }
      } else {
        alert('创建待办失败');
      }
    } catch (error) {
      alert('操作失败');
    }
  }

  async function ignoreSuggestion(id: number) {
    if (!confirm('确定要忽略这条建议吗？')) return;

    try {
      const response = await fetch(`/api/suggestions?id=${id}`, {
        method: 'DELETE',
        headers: { 'Authorization': `Bearer ${token}` }
      });
      
      const result = await response.json();
      
      if (result.success) {
        suggestions = suggestions.filter(s => s.id !== id);
        renderSuggestions();
      } else {
        alert(result.error || '操作失败');
      }
    } catch (error) {
      alert('操作失败');
    }
  }

  function openReplyModal(id: number) {
    const suggestion = suggestions.find(s => s.id === id);
    if (!suggestion) return;

    (document.getElementById('replySuggestionId') as HTMLInputElement).value = id.toString();
    (document.getElementById('replySuggestionContent') as HTMLElement).textContent = suggestion.content;
    (document.getElementById('replyContent') as HTMLTextAreaElement).value = suggestion.reply || '';
    replyModal.classList.remove('hidden');
  }

  function closeReplyModal() {
    replyModal.classList.add('hidden');
  }

  (window as any).adoptSuggestion = adoptSuggestion;
  (window as any).ignoreSuggestion = ignoreSuggestion;
  (window as any).openReplyModal = openReplyModal;

  document.getElementById('closeReplyModal')?.addEventListener('click', closeReplyModal);
  document.getElementById('cancelReplyBtn')?.addEventListener('click', closeReplyModal);

  replyForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const id = parseInt((document.getElementById('replySuggestionId') as HTMLInputElement).value);
    const reply = (document.getElementById('replyContent') as HTMLTextAreaElement).value;

    try {
      const response = await fetch('/api/suggestions', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({ id, reply })
      });
      
      const result = await response.json();
      
      if (result.success) {
        const suggestion = suggestions.find(s => s.id === id);
        if (suggestion) {
          suggestion.reply = reply;
        }
        closeReplyModal();
        renderSuggestions();
      } else {
        alert(result.error || '回复失败');
      }
    } catch (error) {
      alert('操作失败');
    }
  });

  loadSuggestions();
</script>
