---
import BaseLayout from '../layouts/BaseLayout.astro';
import CollageCard from '../components/collage/CollageCard.astro';

const todos = [
  { title: '完成网站基础架构', status: 'done', priority: 'high' },
  { title: '实现博客系统', status: 'doing', priority: 'high' },
  { title: '开发粉丝互动功能', status: 'pending', priority: 'medium' },
  { title: '集成Notion待办同步', status: 'pending', priority: 'medium' },
  { title: '添加GSAP动画效果', status: 'pending', priority: 'low' },
];

const statusColors: Record<string, string> = {
  done: '#22c55e',
  doing: '#f59e0b',
  pending: '#6b7280',
};

const statusLabels: Record<string, string> = {
  done: '已完成',
  doing: '进行中',
  pending: '待开始',
};
---

<BaseLayout title="待办事项">
  <div class="space-y-8">
    <section class="text-center py-8">
      <CollageCard rotation={-0.5} class="inline-block px-8 py-4">
        <h1 class="text-3xl md:text-4xl font-bold">待办事项</h1>
      </CollageCard>
      <p class="text-muted-foreground mt-4 max-w-2xl mx-auto">
        实时同步我的学习进度和项目规划
      </p>
    </section>

    <CollageCard rotation={0.3} class="p-6">
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <div class="w-2 h-6 bg-accent" />
        当前进度
      </h2>
      <div class="flex gap-4 justify-center">
        <div class="text-center">
          <div class="text-3xl font-bold text-green-500">1</div>
          <div class="text-sm text-muted-foreground">已完成</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-amber-500">1</div>
          <div class="text-sm text-muted-foreground">进行中</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-gray-500">3</div>
          <div class="text-sm text-muted-foreground">待开始</div>
        </div>
      </div>
    </CollageCard>

    <section class="space-y-4">
      {todos.map((todo, index) => {
        const rotation = ((index % 2) - 0.5) * 1;
        return (
          <CollageCard rotation={rotation} class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-4">
              <div
                class="w-4 h-4 rounded-full border-2"
                style={{
                  borderColor: statusColors[todo.status],
                  backgroundColor: todo.status === 'done' ? statusColors[todo.status] : 'transparent',
                }}
              />
              <span class:list={[todo.status === 'done' && 'line-through text-muted-foreground']}>
                {todo.title}
              </span>
            </div>
            <span
              class="px-2 py-1 text-xs"
              style={{ backgroundColor: `${statusColors[todo.status]}20`, color: statusColors[todo.status] }}
            >
              {statusLabels[todo.status]}
            </span>
          </CollageCard>
        );
      })}
    </section>

    <CollageCard rotation={-0.5} class="p-6 text-center bg-secondary/50">
      <p class="text-muted-foreground">
        数据来源：Notion 同步
      </p>
      <p class="text-xs text-muted-foreground mt-2">
        最后更新：2026-02-16
      </p>
    </CollageCard>
  </div>
</BaseLayout>
