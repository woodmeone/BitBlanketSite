---
import BaseLayout from '../layouts/BaseLayout.astro';
import CollageCard from '../components/collage/CollageCard.astro';
import { getAllTodos } from '../lib/data-service';

const todos = await getAllTodos(Astro);

const statusColors: Record<string, string> = {
  completed: '#22c55e',
  in_progress: '#f59e0b',
  pending: '#6b7280',
};

const statusLabels: Record<string, string> = {
  completed: '已完成',
  in_progress: '进行中',
  pending: '准备中',
};

const priorityLabels: Record<string, string> = {
  high: '高',
  medium: '中',
  low: '低',
};

const doneCount = todos.filter(t => t.status === 'completed').length;
const doingCount = todos.filter(t => t.status === 'in_progress').length;
const pendingCount = todos.filter(t => t.status === 'pending').length;

const formatDate = (dateStr: string) => {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit'
  });
};
---

<BaseLayout title="待办事项">
  <div class="space-y-8">
    <section class="text-center py-8">
      <CollageCard rotation={-0.5} class="inline-block px-8 py-4">
        <h1 class="text-3xl md:text-4xl font-bold">待办事项</h1>
      </CollageCard>
      <p class="text-muted-foreground mt-4 max-w-2xl mx-auto">
        实时同步我的学习进度和项目规划
      </p>
    </section>

    <CollageCard rotation={0.3} class="p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold flex items-center gap-2">
          <div class="w-2 h-6 bg-accent" />
          当前进度
        </h2>
        <div class="flex items-center gap-2 text-sm text-muted-foreground">
          <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
          <span>数据库同步</span>
        </div>
      </div>
      
      <div class="flex gap-6 justify-center mb-6">
        <div class="text-center">
          <div class="text-4xl font-bold text-green-500">{doneCount}</div>
          <div class="text-sm text-muted-foreground">已完成</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-amber-500">{doingCount}</div>
          <div class="text-sm text-muted-foreground">进行中</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-gray-500">{pendingCount}</div>
          <div class="text-sm text-muted-foreground">准备中</div>
        </div>
      </div>
      
      <div class="h-3 bg-secondary rounded-full overflow-hidden">
        <div 
          class="h-full bg-gradient-to-r from-green-500 to-accent transition-all duration-500"
          style={`width: ${todos.length > 0 ? (doneCount / todos.length) * 100 : 0}%`}
        />
      </div>
      <p class="text-center text-sm text-muted-foreground mt-2">
        总体进度：{todos.length > 0 ? Math.round((doneCount / todos.length) * 100) : 0}%
      </p>
    </CollageCard>

    <section class="space-y-4">
      <h2 class="text-xl font-bold flex items-center gap-2">
        <div class="w-2 h-6 bg-accent" />
        任务列表
      </h2>
      
      {todos.map((todo, index) => {
        const rotation = ((index % 2) - 0.5) * 1;
        const priority = String(todo.priority || 0);
        const priorityText = priority === '1' || priority === 'high' ? 'high' : priority === '0' || priority === 'low' ? 'low' : 'medium';
        return (
          <CollageCard rotation={rotation} class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-4">
              <div
                class="w-5 h-5 rounded-full border-2 flex items-center justify-center"
                style={{
                  borderColor: statusColors[todo.status] || statusColors.pending,
                  backgroundColor: todo.status === 'completed' ? statusColors[todo.status] : 'transparent',
                }}
              >
                {todo.status === 'completed' && (
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                  </svg>
                )}
              </div>
              <div>
                <span class:list={[todo.status === 'completed' && 'line-through text-muted-foreground', 'font-medium']}>
                  {todo.title}
                </span>
                {todo.description && (
                  <p class="text-xs text-muted-foreground mt-1">{todo.description}</p>
                )}
                <div class="flex items-center gap-2 mt-1">
                  {todo.category && (
                    <span class="text-xs px-2 py-0.5 bg-secondary">{todo.category}</span>
                  )}
                  <span class:list={['text-xs', priorityText === 'high' ? 'text-red-500' : priorityText === 'medium' ? 'text-amber-500' : 'text-gray-400']}>
                    {priorityLabels[priorityText]}优先级
                  </span>
                </div>
              </div>
            </div>
            <span
              class="px-3 py-1 text-xs border-2"
              style={{ 
                borderColor: statusColors[todo.status] || statusColors.pending,
                color: statusColors[todo.status] || statusColors.pending
              }}
            >
              {statusLabels[todo.status] || todo.status}
            </span>
          </CollageCard>
        );
      })}
    </section>

    {todos.length === 0 && (
      <section class="text-center text-muted-foreground">
        <CollageCard rotation={0} class="inline-block px-8 py-4">
          <p>暂无待办事项</p>
        </CollageCard>
      </section>
    )}

    <CollageCard rotation={-0.5} class="p-6 text-center bg-secondary/50">
      <div class="flex items-center justify-center gap-2 mb-2">
        <svg class="w-5 h-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <span class="text-muted-foreground">数据来源</span>
      </div>
      <p class="font-medium">数据库同步</p>
      <p class="text-xs text-muted-foreground mt-2">
        最后更新：{formatDate(new Date().toISOString())}
      </p>
    </CollageCard>
  </div>
</BaseLayout>
